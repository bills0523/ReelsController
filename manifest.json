{
  "manifest_version": 3,
  "name": "Reels Controller",
  "description": "Override Instagram Reels keyboard shortcuts with a single toggle.",
  "version": "0.1.0",
  "permissions": [
    "storage",
    "scripting"
  ],
  "optional_host_permissions": [
    "https://www.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Reels Controller",
    "default_popup": "popup.html"
  }
}
